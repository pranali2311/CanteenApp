<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <CheckBox
        android:id="@+id/vegcheckBox1"
        android:layout_width="395dp"
        android:layout_height="69dp"
        android:text="ALOO-GOBHI"
        />

    <CheckBox
        android:id="@+id/vegcheckBox2"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:text="RAJMAA"
        android:onClick="counter"
        />
    <CheckBox
        android:id="@+id/vegcheckBox3"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:text="BHENDI"
       />

    <CheckBox
        android:id="@+id/vegcheckBox4"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:text="BAINGAN KA BHARTA"

       />

    <CheckBox
        android:id="@+id/vegcheckBox5"
        android:layout_width="395dp"
        android:layout_height="65dp"
        android:text="MATAR"
        />

    <CheckBox
        android:id="@+id/vegcheckBox6"
        android:layout_width="403dp"
        android:layout_height="62dp"
        android:text="CHOLE"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/finalSubmit"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginRight="100sp"
            android:layout_marginLeft="10sp"
            android:layout_weight="0.5"
            android:text="SUBMIT"/>

        <ImageButton
            android:id="@+id/vegimageButton"
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginLeft="100sp"
            android:layout_marginRight="10sp"
            android:layout_weight="0.5"
            android:onClick="onButtonclick"
            android:src="@drawable/ic_restaurant_menu_black_24dp"
            />
    </LinearLayout>

</LinearLayout>



</ScrollView>





