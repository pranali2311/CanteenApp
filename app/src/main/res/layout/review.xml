<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#FFA500"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:id="@+id/reviewTitle"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. Quality Of Food"
        android:id="@+id/review1"
        android:layout_below="@+id/reviewTitle"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        />
    <ImageView
        android:layout_width="220sp"
        android:layout_height="100sp"
        android:src="@drawable/zerostar"
        android:layout_below="@+id/review1"
        android:id="@+id/imageReview1"
        android:scaleType="fitXY"
        android:layout_marginTop="2sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2. Service"
        android:id="@+id/review2"
        android:layout_below="@+id/imageReview1"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="20sp"
        />
    <ImageView
        android:layout_width="220sp"
        android:layout_height="100sp"
        android:src="@drawable/zerostar"
        android:layout_below="@+id/review2"
        android:id="@+id/imageReview2"
        android:scaleType="fitXY"
        android:layout_marginTop="2sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mTextView"
        android:layout_toRightOf="@id/reviewTitle"
        android:layout_alignParentRight="true"/>


</RelativeLayout>