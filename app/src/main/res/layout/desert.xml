<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/desertlist"
        >

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Ice-Cream"
            android:id="@+id/icecream"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Gulab-Jamun"
            android:id="@+id/jamun"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Lassi"
            android:id="@+id/lassi"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Mathha"
            android:id="@+id/mathha"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Puding"
            android:id="@+id/pudding"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Waffles"
            android:id="@+id/waffles"/>

        <RadioButton
            android:id="@+id/brownie"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Brownie" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:text="Pie"
            android:id="@+id/pie"/>
    </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/finalSubmit1"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginRight="100sp"
                android:layout_marginLeft="10sp"
                android:layout_weight="0.5"
                android:text="SUBMIT"/>

            <ImageButton
                android:id="@+id/desertButton"
                android:layout_width="70sp"
                android:layout_height="70sp"
                android:layout_marginLeft="100sp"
                android:layout_marginRight="10sp"
                android:layout_weight="0.5"
                android:onClick="onButtonclick"
                android:src="@drawable/ic_restaurant_menu_black_24dp"
                />
        </LinearLayout>


    <!--<ImageButton
        android:id="@+id/desertButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="320dp"
        android:clickable="true"
        android:src="@drawable/ic_check_circle_black_24dp" />
-->
    </LinearLayout>

</ScrollView>